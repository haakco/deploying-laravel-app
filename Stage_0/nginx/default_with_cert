server {
  listen 80 default_server;
  listen [::]:80 default_server;

  root /var/www/site/public;

  index index.html index.htm index.php;

  server_name _;

  location / {
    try_files $uri $uri/ /index.php?q=$uri&$args;
  }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php-fpm.sock;
     }

  location ~ /\.ht {
    deny all;
  }
}
server {

  root /var/www/site/public;

  index index.html index.htm index.php;
    server_name www.custd.com custd.com; # managed by Certbot


  location / {
    try_files $uri $uri/ /index.php?q=$uri&$args;
  }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php-fpm.sock;
     }

  location ~ /\.ht {
    deny all;
  }


    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/www.custd.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.custd.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot



}server {
    if ($host = custd.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = www.custd.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


  listen 80 ;
  listen [::]:80 ;
    server_name www.custd.com custd.com;
    return 404; # managed by Certbot




}
